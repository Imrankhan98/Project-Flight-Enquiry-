<html>
<style>
    .maincontainer {
        background: #0040ff;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        padding: 10px;
        border-radius: 20px;
        width: auto;
        height: auto;
        background: #FFF
    }

    .heading {
        font-size: 24px;
        letter-spacing: 1px;
        font-weight: bold;
        color: #0040ff;
        display: flex;
        flex-direction: row;
        margin-bottom: 10px;
    }

    .daysstyle {
        display: flex;
        flex-direction: row;
        justify-content: space-evenly;
    }

    .buttonstyle {
        width: 100%;
    }
</style>
<html>

<head>
    <title>Flight Interface</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <div class="maincontainer">
        <div class="box">
            <table class="table table-hover">
                <thead>
                    <div class="heading">
                       <a href="/flight/flightinterface"> <img src="/images/Addrecord.png" width="35"></a>
                        <img src="/images/flight.png" width="50">
                        List of Flight
                    </div>
                    <tr>
                        <th scope="col">Flight Name/<br>Types</th>
                        <th scope="col">Days<br>Seats</th>
                        <th scope="col">Source City</th>
                        <th scope="col">Destination City</th>
                        <th scope="col">Company</th>
                        <th scope="col">Logo</th>
                        <th scope="col">Edit/Delete</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <% data.map((item)=>{ %>
                            <th scope="row">
                                <%=item.flightname %>
                                    <br>
                                    <%=item.flighttype %>
                            </th>
                            <td>
                                    <%=item.days %>
                                    <br>seats
                                    <%=item.totalseats %>
                            
                            </td>
                            <td>
                                <%=item.source %>
                                    <br>
                                    <%=item.departuretime %>
                            </td>
                            <td>
                                <%=item.destination %>
                                    <br>
                                    <%=item.arrivaltime %>
                            </td >

                            <td>
                                <%=item.company %>

                            </td>
                            <td>
                              <a href="/flight/searchbyidforimage?fid=<%=item.flightid %>"> <img src="/images/<%=item.logo%>" width="30"/></a>
                            </td>
                            <td>
                                <a href="/flight/searchbyid?fid=<%=item.flightid%>">
                                Edit/Delete
                            </a>
                            </td>
                    </tr>
                    <% }) %>



                </tbody>
            </table>
        </div>
    </div>
    <% data.map((item)=>{ %>
        <%=item.flightname %><br>

            <%}) %>
</body>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">

</html>